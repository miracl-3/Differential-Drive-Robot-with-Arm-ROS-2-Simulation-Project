<launch>
  <let name="urdf_path" value="$(find-pkg-share simulation_final_project)/urdf/differential_drive_robot.urdf.xacro"/>
  <let name="rviz_config_path" value="$(find-pkg-share simulation_final_project)/config/differential_drive_arm_robot.rviz"/>
  <let name="gz_ros_bridge_file" value="$(find-pkg-share simulation_final_project)/config/gz_ros_bridge.yaml"/>

  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" 
           value="$(command 'xacro $(var urdf_path)')"/>
  </node>

  <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)"/>

  <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
    <arg name="gz_args" value="$(find-pkg-share simulation_final_project)/worlds/sample_world.sdf -r"/>
  </include>

  <timer period="1.0">
    <node pkg="ros_gz_sim"
          exec="create"
          name="spawn_entity"
          output="screen"
          args="-topic robot_description"/>
  </timer>

  <!-- ROS-GZ bridge -->
  <node pkg="ros_gz_bridge" exec="parameter_bridge">
    <param name="config_file" value="$(var gz_ros_bridge_file)"/>
  </node>

</launch>
